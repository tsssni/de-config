

* {
  background-color: transparent;
  font:         "Monaspace Neon 12";
  text-color:       #5a5ae8;
}


window {
  padding: 1em;

  border-radius: 20px;

  width:  1024px; 

  background-color: #b1b1e899;
}

mainbox {
  spacing: 0px;
  children: [inputbar,wrapper-mode-switcher,listview];
}

element {
  background: transparent;
  children: [ element-icon, element-text ];
}
element,element-text,element-icon, button {
    cursor: pointer;
}

inputbar {
  margin: 0px 0px 0.5em 0em;
  spacing: 0.4em;
  children: [ entry ];
}

listview, inputbar, message {
  padding: 0.5em;  
  border-radius: 10px;
  background-color: transparent;

  columns: 4;
  lines:   4;
}
listview {
  border-radius: 10px;
}


element {
    padding:      10px;
    font:         "Monaspace Neon 12";
    orientation: vertical;
}
element-icon {
  size: 6em;
}

element  selected {
  border-radius: 10px;
  background-image: linear-gradient(to bottom, #b1b1e8aa, #d2dcecaa);
}

element-text, element-icon {
  font:             inherit; 
  horizontal-align: 0.5;
}

wrapper-mode-switcher {
    orientation: horizontal;

    expand:     false;
    spacing:    0;
    children: [ mode-switcher ];
}

mode-switcher {
    spacing: 0px;
    expand: true;
}
button {
    horizontal-align: 0.5;
}
button selected.normal {
    margin: 0px;
    padding: 0px;

    border-radius:    10px 10px 10px 10px;
    background-image: linear-gradient(to bottom, #b1b1e8aa, #d2dcecaa);
}

entry {
    placeholder: "input";
    placeholder-color: #5a5ae8;
}
